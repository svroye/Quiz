            <RadioButton
                android:id="@+id/radio_button_6_4"
                style="@style/answers"
                android:text="@string/Q23A4" />


        </RadioGroup>


        <TextView
            style="@style/mainQuestions"
            android:text="@string/question_3" />

        <RadioGroup
            android:id="@+id/radiogroup_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/radiogroup_padding">

            <TextView
                style="@style/subQuestions"
                android:text="@string/question_3.1" />

            <RadioButton
                android:id="@+id/radio_button_7_1"
                style="@style/answers"
                android:text="@string/Q31A1" />


            <RadioButton

                android:id="@+id/radio_button_5_2"
                style="@style/answers"
                android:text="@string/Q22A2" />

            <RadioButton
                android:id="@+id/radio_button_5_3"
                style="@style/answers"
                android:text="@string/Q22A3" />

            <RadioButton
                android:id="@+id/radio_button_5_4"
                style="@style/answers"
                android:text="@string/Q22A4" />


        </RadioGroup>

        <RadioGroup
            android:id="@+id/radiogroup_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/radiogroup_padding"
            android:paddingTop="@dimen/radiogroup_padding"

            >

            <TextView
                style="@style/subQuestions"
                android:text="@string/question_2.3" />


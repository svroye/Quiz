                android:text="@string/Q21A2" />

            <RadioButton
                android:id="@+id/radio_button_4_3"
                style="@style/answers"
                android:text="@string/Q21A3" />

            <RadioButton
                android:id="@+id/radio_button_4_4"
                style="@style/answers"
                android:text="@string/Q21A4" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/radiogroup_5"

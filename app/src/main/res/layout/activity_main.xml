<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.android.quiz.MainActivity">

        <TextView
            style="@style/welcome"
            android:text="@string/welcome" />

        <TextView
            style="@style/mainQuestions"
            android:text="@string/question_1" />

        <RadioGroup
            android:id="@+id/radiogroup_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/radiogroup_padding">

            <TextView
                style="@style/subQuestions"
                android:text="@string/question_1.1" />

            <RadioButton
                android:id="@+id/radio_button_1_1"
                style="@style/answers"
                android:text="@string/Q11A1" />


            <RadioButton
                android:id="@+id/radio_button_1_2"
                style="@style/answers"
                android:text="@string/Q11A2" />

            <RadioButton
                android:id="@+id/radio_button_1_3"
                style="@style/answers"
                android:text="@string/Q11A3" />

            <RadioButton
                android:id="@+id/radio_button_1_4"
                style="@style/answers"
                android:text="@string/Q11A4" />

        </RadioGroup>


        <TextView
            android:layout_margin="4dp"
            android:paddingLeft="16dp"
            style="@style/subQuestions"
            android:text="@string/question_1.2" />

        <EditText
            android:id="@+id/edit_answer"
            android:paddingLeft="@dimen/radiogroup_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint"
            android:inputType="textCapWords" />


        <RadioGroup
            android:id="@+id/radiogroup_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/radiogroup_padding"
            android:paddingTop="@dimen/radiogroup_padding"

            >

            <TextView
                style="@style/subQuestions"
                android:text="@string/question_1.3" />

            <RadioButton
                android:id="@+id/radio_button_3_1"
                style="@style/answers"
                android:text="@string/Q13A1" />


            <RadioButton
                android:id="@+id/radio_button_3_2"
                style="@style/answers"
                android:text="@string/Q13A2" />

            <RadioButton
                android:id="@+id/radio_button_3_3"
                style="@style/answers"
                android:text="@string/Q13A3" />

            <RadioButton
                android:id="@+id/radio_button_3_4"
                style="@style/answers"
                android:text="@string/Q13A4" />


        </RadioGroup>


        <TextView
            style="@style/mainQuestions"
            android:text="@string/question_2" />

        <RadioGroup
            android:id="@+id/radiogroup_4"
            android:layout_width="match_parent"

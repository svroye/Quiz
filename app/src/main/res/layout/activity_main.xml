        <TextView
            android:paddingLeft="@dimen/radiogroup_padding"
            style="@style/subQuestions"
            android:text="@string/question_3.4"
           />

        <CheckBox
            android:id="@+id/cb1"
            style="@style/answers"
            android:text="@string/Q34A1"/>

        <CheckBox
            android:id="@+id/cb2"
            style="@style/answers"
            android:text="@string/Q34A2"/>

        <CheckBox
            android:id="@+id/cb3"
            style="@style/answers"
            android:text="@string/Q34A3"/>

        <CheckBox
            android:id="@+id/cb4"
            style="@style/answers"
            android:text="@string/Q34A4"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="submitAnswers"
            android:text="@string/button_finish" />


    </LinearLayout>
</ScrollView>